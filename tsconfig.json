{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": ".build",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}